<%- contentFor('title') %>
    Welcome!
<%- contentFor('stylesheets') %>
    <link rel="stylesheet" href="/css/landing.css"/>
<%- contentFor('scripts') %>
    <script type="text/javascript" src="/js/landing.controller-compiled.js"></script>
<%- contentFor('body') %>
    <div class="logo">
        <img class="logo" src="/assets/logo_white.png"/>
    </div>
    <div class="form" ng-controller="LandingController">
        <h3><%=message%></h3>
        <div id="login-form">
            <form action="/login" method="post">
                <input type="text" name="email" placeholder="Email"> <br>
                <input type="password" name="password" placeholder="Password"> <br>
                <input type="submit" value="Log In"> <br>
            </form>
            Don't have an account? <a href="" ng-click="switchForm('toSignUp')"> Sign up here </a>
        </div>

        <div id="register-form">
            <form action="/register" method="post">
                <input type="text" name="name" placeholder="Pen Name"> <br>
                <input type="text" name="email" placeholder="Email"> <br>
                <input type="password" name="password" placeholder="Password"> <br>
                <input type="submit" value="Register">
            </form>
            Already have an account? <a href="" ng-click="switchForm('toLogIn')"> Login here </a>
        </div>

    </div>